{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "left",
    "positionY": "top",
	  "layer": "overlay",
    "control-center-margin-top": 0,
    "control-center-margin-bottom": 10,
    "control-center-margin-right": 10,
    "control-center-margin-left": 10,
    "notification-icon-size": 64,
    "notification-body-image-height": 100,
    "notification-body-image-width": 200,
    "timeout": 3,
    "timeout-low": 2,
    "timeout-critical": 0,
    "fit-to-screen": true,
    "control-center-width": 500,
    "control-center-height": 1025,
    "notification-window-width": 440,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": true,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "title",
        "dnd",
        "notifications",
        "mpris",
        "volume",
        "backlight",
        "buttons-grid"
    ],
    "widget-config": {
        "title": {
            "text": "Notification Center",
            "clear-all-button": true,
            "button-text": "󰆴 Clear All"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 7
        },
        "volume": {
            "label": "󰕾",
			"show-per-app": false
        },
        "backlight": {
            "label": "󰃟",
            "_comment": "per trovare il device corretto eseguire il comando: ls /sys/class/backlight, ed inserire il nome della cartella in device",
            "device": "amdgpu_bl1",
            "subsystem": "backlight",
            "min": 0
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "",
                    "command": "bash -c 'swaync-client -C; /home/lukil/.config/rofi/Screen/rofi-screen'"
                },
                {
                    "label": "",
                    "command": "bash -c 'swaync-client -C; /home/lukil/.config/rofi/Monitor/rofi-monitor'"
                },
                {
                    "label": "󰃟",
                    "command": "bash -c 'swaync-client -C; /home/lukil/.config/rofi/Brightness/rofi-brightness'"
                },
                {
                    "label": "󰕾",
                    "command": "bash -c 'swaync-client -C; /home/lukil/.config/rofi/Volume/rofi-volume'"
                },
                {
                    "label": "󰂯",
                    "command": "bash -c 'swaync-client -C; /home/lukil/.config/rofi/Bluetooth/rofi-bluetooth'"
                },
                {
                    "label": "󰖩",
                    "command": "bash -c 'swaync-client -C; /home/lukil/.config/rofi/Network/rofi-network'"
                },
                {
                    "label": "󰁿",
                    "command": "bash -c 'swaync-client -C; /home/lukil/.config/rofi/Battery/rofi-battery'"
                },
                {
                    "label": "󰌾",
                    "command": "/home/lukil/.config/hypr/script/lock.sh"
                },
                {
                    "label": "󰤄",
                    "command": "systemctl suspend"
                },
                {
                    "label": "󰍃",
                    "command": "hyprctl dispatch exit"
                },
                {
                    "label": "󰜉",
                    "command": "systemctl reboot"
                },
                {
                    "label": "󰐥",
                    "command": "systemctl poweroff"
                }
            ]
        }
    }
}